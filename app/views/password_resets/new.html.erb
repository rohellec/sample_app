<% provide(:title, "Forgot password") %>
<h1>Forgot password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag password_resets_path do %>
      <%= label_tag :email %>
      <%= text_field_tag :email, nil, class: "form-control" %>

      <%= submit_tag "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
